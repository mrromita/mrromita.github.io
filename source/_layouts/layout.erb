<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman is Loaded" %></title>
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= yield_content :css %>
  </head>
  
  <body class="<%= page_classes %>">

    <header class="site-header">
      <div class="container">
        <%= partial "_layouts/nav" %>
      </div>
    </header>
    <div class="background"> 

    <main class="site-main container">
      <%= yield %>
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>
            PARA ACCERORIOS VISITAMOS EN MERCADO HIDALGO LOCAL 15 MODACEL
            <br />
            <% link_to 'https://www.facebook.com/pages/Videoclub-Mr-Romita/396665733765797', target: '_blank' do %>
             <%= image_tag 'facebook1.png' %>
            <% end %>
        </p>
      </div>
    </footer>
  </div>

    <%= javascript_include_tag  "all" %>
    <%= yield_content :js %>
  </body>
</html>